<Window x:Class="CaseStudy_BentMelis.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CaseStudy_BentMelis"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="316">
    <Grid Margin="10,0,10,0">
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Margin="150,106,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="label" Content="Username:" HorizontalAlignment="Left" Margin="50,102,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="Password:" HorizontalAlignment="Left" Margin="50,136,0,0" VerticalAlignment="Top"/>
        <Button x:Name="button" Content="Login" HorizontalAlignment="Left" Margin="136,217,0,0" VerticalAlignment="Top" Click="button_Click"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="150,140,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.342,0.9"/>

    </Grid>
</Window>
